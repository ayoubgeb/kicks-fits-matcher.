<script>
  function generateSuggestion() {
    const sneakerColor = document.getElementById('sneakerColor').value;
    const occasion = document.getElementById('outfitOccasion').value;
    const style = document.getElementById('preferredStyle').value;
    const contrast = document.getElementById('colorContrast').value;
    const clothing = document.getElementById('clothingItem').value;
    const season = document.getElementById('season').value;
    const location = document.getElementById('location').value;

    const accessorySelect = document.getElementById('accessory');
    const accessoryText = accessorySelect.options[accessorySelect.selectedIndex].text;

    // Affiliate links per country
    const affiliateLinks = {
      denmark: "https://direct.me/l/mLxP",
      usa: "https://amzn.to/453IyCL"
    };

    const link = affiliateLinks[location] || "#";

    const suggestion = `ðŸ‘Ÿ Your ${sneakerColor.toLowerCase()} sneakers fit perfectly for a ${occasion.toLowerCase()} vibe. Match them with ${clothing} for a clean ${style.toLowerCase()} look. Try a ${contrast.toLowerCase()} palette to balance your outfit. Ideal for ${season} seasons. Top it off with a matching accessory: ${accessoryText}\n\nðŸ›’ Shop here: ${link}`;

    document.getElementById('result').value = suggestion;
    document.getElementById('outputArea').innerText = "ðŸ“Œ Styling saved:\n" + suggestion;
  }

  function resetForm() {
    document.querySelectorAll('select, textarea').forEach(el => el.value = '');
    document.getElementById('outputArea').innerText = '';
  }
</script>
